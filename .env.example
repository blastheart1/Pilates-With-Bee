# PWB Pilates Studio Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="PWB Pilates Studio"
NEXT_PUBLIC_CONTACT_EMAIL=hello@pwbpilates.com
NEXT_PUBLIC_CONTACT_PHONE="+63-917-123-4567"

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anonymous_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Payment Processing (PayMongo) - Philippines
PAYMONGO_SECRET_KEY=sk_test_your_paymongo_secret_key
NEXT_PUBLIC_PAYMONGO_PUBLIC_KEY=pk_test_your_paymongo_public_key
PAYMONGO_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=hello@pwbpilates.com
SENDGRID_FROM_NAME="PWB Pilates Studio"

# Alternative Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key

# SMS Service (Semaphore - Philippines)
SEMAPHORE_API_KEY=your_semaphore_api_key
SEMAPHORE_SENDER_NAME="PWB Pilates"

# Alternative SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload and Storage (Cloudinary)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Alternative File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET_NAME=pwb-pilates-storage

# Social Media Integration
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_USER_ID=your_instagram_user_id
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Analytics and Tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Maps Integration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Development and Testing
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# API Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Business Configuration
BUSINESS_TIMEZONE=Asia/Manila
BUSINESS_CURRENCY=PHP
BUSINESS_TAX_RATE=0.12

# Studio Locations
STUDIO_DOWNTOWN_ADDRESS="123 Wellness Street, Makati City, Metro Manila"
STUDIO_DOWNTOWN_PHONE="+63-917-123-4567"
STUDIO_UPTOWN_ADDRESS="456 Serenity Ave, Quezon City, Metro Manila"
STUDIO_UPTOWN_PHONE="+63-917-123-4568"

# Booking Configuration
DEFAULT_CLASS_DURATION_MINUTES=60
MAX_ADVANCE_BOOKING_DAYS=30
CANCELLATION_DEADLINE_HOURS=24
WAITLIST_EXPIRY_HOURS=2

# Loyalty Program
LOYALTY_POINTS_PER_PESO=1
REFERRAL_BONUS_POINTS=500
BIRTHDAY_BONUS_POINTS=200

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Feature Flags
ENABLE_LOYALTY_PROGRAM=true
ENABLE_REFERRAL_SYSTEM=true
ENABLE_NUTRITION_TRACKING=true
ENABLE_WEARABLE_INTEGRATION=false
ENABLE_ONLINE_CLASSES=true

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
WEBHOOK_SECRET=your_webhook_secret

# Third-party Integrations
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
APPLE_HEALTH_CLIENT_ID=your_apple_health_client_id
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id

# Content Management
ENABLE_BLOG=true
ENABLE_TESTIMONIALS=true
ENABLE_INSTRUCTOR_PROFILES=true

# Backup and Monitoring
DATABASE_BACKUP_ENABLED=true
MONITORING_ENABLED=true
LOG_LEVEL=info
